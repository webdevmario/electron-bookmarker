{
  "name": "bookmarker",
  "version": "1.0.2",
  "description": "Electron Bookmarker",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "win": "electron-builder -w",
    "watch": "nodemon --exec 'electron .'",
    "reset": "git reset --hard",
    "make-cert": "electron-builder create-self-signed-cert -p mario"
  },
  "build": {
    "appId": "com.electron-bookmarker",
    "directories": {
      "buildResources": "."
    },
    "win": {
      "publish": [
        "github"
      ],
      "certificateFile": "private/mario.pfx",
      "verifyUpdateCodeSignature": false,
      "publisherName": "mario"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mportillo80/electron-bookmarker.git"
  },
  "keywords": [
    "electron",
    "demo"
  ],
  "author": "Mario Portillo",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^11.5.0",
    "electron-builder": "^21.0.15",
    "nodemon": "^1.18.9"
  },
  "dependencies": {
    "electron-log": "^3.0.6",
    "electron-updater": "^4.1.2",
    "electron-window-state": "^5.0.3"
  }
}
